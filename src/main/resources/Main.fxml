<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.zhuantan_calculator.controller.MainController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="importButton" text="导入Excel" onAction="#handleImportExcel"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="vehicleTable">
            <columns>
                <TableColumn fx:id = "yearCol" text="年份" />
                <TableColumn fx:id = "modelCol" text="车型" />
                <TableColumn fx:id = "fuelTypeCol" text="燃料类型" />
                <TableColumn fx:id = "curbWeightCol" text="整备质量/kg"/>
                <TableColumn fx:id = "grossWeightCol" text="总质量/kg"/>
                <TableColumn fx:id = "testMassCol" text="测试质量/kg"/>
                <TableColumn fx:id = "gvwAreaCol" text="质量段"/>
                <TableColumn fx:id = "energyCol" text="能耗"/>
                <TableColumn fx:id = "salesCol" text="销量"/>
                <TableColumn fx:id = "carbonGroupCol" text="转碳车组"/>







            </columns>
        </TableView>
    </center>

</BorderPane>