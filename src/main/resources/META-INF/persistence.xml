<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="zhuantanPU">
        <class>com.example.zhuantan_calculator.model.NewEnergyThreshold</class>
        <class>com.example.zhuantan_calculator.model.CommercialTarget</class>
        <class>com.example.zhuantan_calculator.model.EnergyConversion</class>
        <class>com.example.zhuantan_calculator.model.CarbonFactor</class>


        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:${db.path}"/>

            <!--            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:vehicles.db"/>-->

            <!-- Hibernate 配置 -->
            <property name="hibernate.dialect" value="org.hibernate.community.dialect.SQLiteDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>